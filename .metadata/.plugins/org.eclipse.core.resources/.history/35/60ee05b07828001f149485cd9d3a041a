package hierarchical_inheritance;

public class Appliance {
  public String brand;
  public double powerConsumption;
  public boolean isOn;
  
 public Appliance(String brand, double powerConsumption) {
	 this.brand = brand;
	 this.powerConsumption=powerConsumption;
	 this.isOn= false;
 }
  void Display_Appliance() {
	  System.out.println("Brand:"+brand);
	  System.out.println("Power Consumption:"+powerConsumption+ "watts");	  
  }
  public void turn_on() {
	  isOn=true;
	  System.out.println(brand+ "is now on");
  }
  public void turn_off() {
	  isOn=false;
	  System.out.println(brand+ "is now off");
  }
}
